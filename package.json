{
  "name": "food-recipes-api",
  "version": "1.0.0",
  "description": "nodejs typescript typescript fullstack",
  "main": "index.js",
  "author": "Krasimir Kostadinov",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "server": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "tsc": "tsc -w",
    "start": "concurrently --kill-others \"nodemon\" \"livereload ./dist -d\"",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "irc": "^0.5.2",
    "logger": "^0.0.1",
    "mongodb": "^4.2.2",
    "mongoose": "^6.1.2",
    "morgan": "^1.10.0",
    "rxjs": "^6.5.5",
    "ts-node-dev": "^1.1.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/irc": "^0.3.33",
    "@types/node": "^14.0.14",
    "concurrently": "^5.2.0",
    "eslint": "^7.3.1",
    "eslint-plugin-import": "^2.22.0",
    "livereload": "^0.9.1",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run server",
    "ext": "ts"
  }
}
